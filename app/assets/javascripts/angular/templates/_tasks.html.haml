%tbody(ui-sortable ng-model="project.tasks")
  %tr(ng-repeat="task in project.tasks")
    %td
      %label
        %input.text-center(type="checkbox")
    %td.task-title(ng-model="taskVisible" ng-if="taskVisible") {{task.title}}
    %td.edit-task-title(ng-model="editTaskHide" ng-if="editTaskHide")
      %form
        .input-group
          %input.input-sm.form-control(ng-model="task.title")
          %span.input-group-btn
            %button.btn.btn-default.btn-sm(ng-click="updateTask(task); showHideEdit(task)")
              %span.glyphicon.glyphicon-ok-circle
            %a.btn.btn-default.btn-sm(ng-click="showHideEdit(task)")
              %span.glyphicon.glyphicon-remove-circle
    %td.task-date
      %span.label.label-warning {{task.deadline | date:'dd-MM-yyyy'}}
    %td
      .edit-task.center-block
        %span.glyphicon.glyphicon-calendar.task-date(aria-hidden="true")
        %span.glyphicon.glyphicon-pencil.task-edit(aria-hidden="true" ng-click="showHideEdit(task)")
        %span.glyphicon.glyphicon-trash.task-delete(aria-hidden="true" ng-click="deleteTask(task)")
