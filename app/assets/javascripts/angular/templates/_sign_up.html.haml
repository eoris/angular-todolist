.container
  #signupbox.mainbox.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2{:style => "margin-top:50px"}
    .panel.panel-info
      .panel-heading
        .panel-title Sign Up
        %div{:style => "float:right; font-size: 85%; position: relative; top:-10px"}
          %a#signinlink(ui-sref="sign_in") Sign In
      .panel-body
        %form#signupform.form-horizontal(ng-submit="handleRegBtnClick()" role="form")
          .form-group
            %label.col-md-3.control-label{:for => "email"} Email
            .col-md-9
              %input.form-control(name="email" placeholder="Email" ng-model="registrationForm.email" required="required" type="email")
          .form-group
            %label.col-md-3.control-label{:for => "password"} Password
            .col-md-9
              %input.form-control(name="password" placeholder="Password" ng-model="registrationForm.password" required="required" type="password")
          .form-group
            %label.col-md-3.control-label{:for => "password_confirmation"}
            .col-md-9
              %input.form-control(name="password_confirmation" placeholder="Password confirmation" ng-model="registrationForm.password_confirmation" required="required" type="password")
          .form-group
            / Button
            .col-md-offset-3.col-md-9
              %button#btn-signup.btn.btn-info(type="submit")
                %i.icon-hand-right
                \&nbsp Sign Up
              %span{:style => "margin-left:8px;"} or
          .form-group{:style => "border-top: 1px solid #999; padding-top:20px"}
            .col-md-offset-3.col-md-9
              %a#btn-fbsignup.btn.btn-primary(href="/#/" ng-controller="sessionsCtrl" ng-click="handleFacebookBtnClick()")
                %i.icon-facebook
                Â  Sign Up with Facebook
